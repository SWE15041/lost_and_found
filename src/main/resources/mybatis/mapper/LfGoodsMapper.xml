<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lyn.lost_and_found.domain.LfGoodsMapper">

    <sql id="ColumnList">
      g.id,
      g.name,
      u.name as release_name,
      DATE_FORMAT(g.create_time,'%y-%m-%d %h:%m:%s') as release_time,
      g.status,
      g.money
    </sql>

    <sql id="WhereClause">
        <where>
            <if test="keyWord != null and keyWord != ''">
                <bind name="pattern" value="'%'+keyWord+'%'"/>
                and (g.name LIKE  #{pattern}) or (g.description like #{pattern})
            </if>
            <if test="releaseType != null and releaseType != ''">
                <bind name="pattern" value="'%'+releaseType+'%'"/>
                and (rr.release_type =  #{pattern})
            </if>
        </where>
    </sql>
    <sql id="OrderClause">
        <if test="orderBy != null and orderBy != ''">
            order by ${orderBy}
        </if>
        <if test="orderBy == null or orderBy == ''">
            order by g.create_time DESC
        </if>
    </sql>

    <select id="selectList" resultType="map" parameterType="map">
        select
        <include refid="ColumnList"/>
        from lf_goods g
        join category c on g.category_id=c.i
        join lf_user u on g.user_id=u.id
        join lf_release_record rr on g.id=rr.goodsId
        <include refid="WhereClause"/>
        <include refid="OrderClause"/>
    </select>

    <select id="countList" resultType="java.lang.Long" parameterType="map">
        select count(1)
        from lf_goods g
        join category c on g.category_id=c.id
        join lf_user u on g.user_id=u.id
        join lf_release_record rr on g.id=rr.goodsId
        <include refid="WhereClause"/>
    </select>

</mapper>